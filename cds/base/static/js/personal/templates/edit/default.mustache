<div class="personal-box-body-edit" data-show="edit">
    <form id="personal-box-admin-form" data-id="{{id}}">
        <div class="form-group">
            <label>Box title</label>
            <input type="text" class="form-control" name="title" value="{{ _settings.title }}" />
        </div>
        <div class="form-group">
            <label>Search query</label>
            <input type="text" class="form-control" name="query" value="{{ _settings.query }}" />
        </div>
        <div class="form-group">
            <label>Collection Name</label>
            <input type="text" class="form-control" name="collection" value="{{ _settings.collection}}" />
        </div>
        <input type="hidden" name="type" value="{{_settings.type}}" />
    </form>
    <div class="personal-box-body-edit-footer">
        <div class="text-right">
            {{#_settings.title}}
                <a href="#" data-state="normal" class="btn btn-small btn-default personal-box-change-state">Cancel</a>
            {{/_settings.title}}
            {{^_settings.title}}
                <a href="#" class="btn btn-small btn-danger personal-box-delete">Delete</a>
            {{/_settings.title}}
            <a href="#" class="btn btn-small btn-success personal-box-save">Save</a>
        </div>
    </div>
</div>
