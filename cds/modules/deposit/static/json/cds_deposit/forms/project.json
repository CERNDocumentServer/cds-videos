{
  "basic": {
    "leftColumn": [
      {
        "title": "Title",
        "key": "title.title"
      },
      {
        "type": "section",
        "htmlClass": "form-ckeditor",
        "description": "",
        "items": [
          {
            "type": "ckeditor",
            "key": "description",
            "title": "Description",
            "ckeditor": {
              "autoParagraph": false,
              "enterMode": 2,
              "entities": false,
              "height": 200,
              "toolbar": [
                ["PasteText", "PasteFromWord"],
                ["Bold", "Italic", "Strike", "-", "Subscript", "Superscript"],
                ["NumberedList", "BulletedList", "Blockquote"],
                ["Undo", "Redo", "-", "Find", "Replace", "-", "RemoveFormat"],
                ["Source"], ["Maximize"]
              ],
              "disableNativeSpellChecker": false,
              "removePlugins": "elementspath",
              "removeButtons": ""
            },
            "description": "Required.",
            "minLength": 1
          }
        ]
      },
      {
        "title": "Keywords",
        "key": "keywords",
        "type": "uiselectmultiple",
        "notitle": false,
        "placeholder": "Keywords",
        "options": {
          "refreshDelay": 100,
          "mergeObjects": true,
          "tagging": true,
          "asyncCallback": "$ctrl.autocompleteKeywords",
          "url": "/api/keywords/_suggest"
        }
      }
    ],
    "rightColumn": [
      {
        "key": "category",
        "placeholder": "Category",
        "title": "Category",
        "type": "strapselect",
        "htmlClass": "cds-deposit-strap-select",
        "onChange": "$ctrl.setPermissions(modelValue, form)",
        "options": {
          "url": "/api/categories/",
          "asyncCallback": "$ctrl.autocompleteCategories"
        }
      },
      {
        "key": "type",
        "placeholder": "Type",
        "title": "Type",
        "type": "strapselect",
        "htmlClass": "cds-deposit-strap-select",
        "readonly": "$ctrl.cdsDepositCtrl.hasCategory() || $ctrl.cdsDepositCtrl.isPublished()",
        "options": {
          "filterTriggers": ["model.category"],
          "filter" : "item.category == model.category",
          "asyncCallback": "$ctrl.autocompleteType"
        }
      },
      {
        "type": "array",
        "key": "contributors",
        "title": "Contributors",
        "description": "",
        "required": true,
        "sortOptions": {
          "disabled": false,
          "handle": "i.sort-handle",
          "cursor": "move",
          "axis": "y"
        },
        "add": "Add another contributor",
        "inline": true,
        "items": [
          {
            "type": "template",
            "templateUrl": "/static/templates/cds_deposit/types/common/custom_authors_dialog.html"
          },
          {
            "type": "uiselect",
            "key": "contributors[]",
            "title": "Name",
            "description": "",
            "placeholder": "Author name",
            "required": true,
            "options": {
              "refreshDelay": 100,
              "mergeObjects": true,
              "asyncCallback": "$ctrl.autocompleteAuthors",
              "url": "//cds.cern.ch/submit/get_authors",
              "extraParams": {
                "relative_curdir": "cdslabs/videos"
              }
            }
          },
          {
            "type": "select",
            "key": "contributors[].role",
            "placeholder": "Role",
            "title": "Role",
            "required": true,
            "titleMap": [
              {
                "value":  "Director",
                "name":  "Director"
              },
              {
                "value":  "Camera Operator",
                "name":  "Camera Operator"
              },
              {
                "value":  "Producer",
                "name":  "Producer"
              },
              {
                "value":  "Music by",
                "name":  "Music by"
              },
              {
                "value":  "Editor",
                "name":  "Editor"
              },
              {
                "value":  "Provider",
                "name":  "Provider"
              },
              {
                "value":  "Translator",
                "name":  "Translator"
              },
              {
                "value":  "Other",
                "name":  "Other"
              }
            ]
          }
        ],
        "startEmpty": false
      }
    ]
  },
  "licenses": [
    {
      "type": "array",
      "key": "license",
      "notitle": true,
      "description": "",
      "sortOptions": {
        "disabled": false,
        "handle": "i.sort-handle",
        "cursor": "move",
        "axis": "y"
      },
      "add": "Add another licence",
      "inline": true,
      "items": [
        {
          "type": "uiselect",
          "key": "license[].license",
          "notitle": false,
          "title": "Licence",
          "placeholder": "License name",
          "minLength": 1,
          "options": {
            "refreshDelay": 100,
            "mergeObjects": true,
            "asyncCallback": "$ctrl.autocompleteLicenses",
            "url": "/api/licenses/_suggest"
          }
        },
        {
          "key": "license[].material",
          "placeholder": "Material",
          "title": "Material"
        }
      ]
    }
  ],
  "translations": [
    {
      "notitle": true,
      "key": "translations",
      "type": "array",
      "add": "Add translations",
      "items": [
        {
          "title": "Title",
          "key": "translations[].title.title",
          "required": false
        },
        {
          "title": "Description",
          "key": "translations[].description",
          "type": "textarea",
          "required": false
        },
        {
          "title": "Language",
          "key": "translations[].language",
          "type": "select",
          "required": false,
          "titleMap": [
            {
              "value":  "bg",
              "name":  "Български"
            },
            {
              "value":  "ca",
              "name":  "Català"
            },
            {
              "value":  "de",
              "name":  "Deutsch"
            },
            {
              "value":  "el",
              "name":  "Ελληνικά"
            },
            {
              "value":  "en",
              "name":  "English"
            },
            {
              "value":  "es",
              "name":  "Español"
            },
            {
              "value":  "fr",
              "name": "Français"
            },
            {
              "value":  "hr",
              "name":  "Hrvatski"
            },
            {
              "value":  "it",
              "name":  "Italiano"
            },
            {
              "value":  "ja",
              "name":  "日本語"
            },
            {
              "value":  "ka",
              "name":  "ქართული"
            },
            {
              "value":  "no",
              "name":  "Norsk/Bokmål"
            },
            {
              "value":  "pl",
              "name":  "Polski"
            },
            {
              "value":  "pt",
              "name":  "Português"
            },
            {
              "value":  "ru",
              "name":  "Русский"
            },
            {
              "value":  "sk",
              "name":  "Slovensky"
            },
            {
              "value":  "sv",
              "name":  "Svenska"
            },
            {
              "value":  "zh_CN",
              "name":  "中文(简)"
            },
            {
              "value":  "zh_TW",
              "name":  "中文(繁)"
            }
          ]
        }
      ]
    }
  ]
}
