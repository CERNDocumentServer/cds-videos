{
  "basic": {
    "leftColumn": [
      {
        "title": "Title",
        "key": "title.title"
      },
      {
        "type": "section",
        "htmlClass": "form-ckeditor",
        "description": "",
        "items": [
          {
            "type": "ckeditor",
            "key": "description",
            "title": "Description",
            "ckeditor": {
              "autoParagraph": false,
              "enterMode": 2,
              "entities": false,
              "height": 200,
              "toolbar": [
                [
                  "PasteText",
                  "PasteFromWord"
                ],
                [
                  "Bold",
                  "Italic",
                  "Strike",
                  "-",
                  "Subscript",
                  "Superscript"
                ],
                [
                  "NumberedList",
                  "BulletedList",
                  "Blockquote"
                ],
                [
                  "Undo",
                  "Redo",
                  "-",
                  "Find",
                  "Replace",
                  "-",
                  "RemoveFormat"
                ]
              ],
              "disableNativeSpellChecker": false,
              "removePlugins": "elementspath",
              "removeButtons": ""
            },
            "description": "",
            "required": true
          }
        ]
      },
      {
        "title": "Keywords",
        "key": "keywords",
        "type": "uiselectmultiple",
        "notitle": false,
        "placeholder": "Keywords",
        "description": "Search or add keywords as a comma separated list e.g. keyword1, keyword2 etc.",
        "options": {
          "refreshDelay": 100,
          "mergeObjects": true,
          "tagging": true,
          "asyncCallback": "$ctrl.autocompleteKeywords",
          "url": "/api/keywords/_suggest"
        }
      },
      {
        "title": "EOS library path",
        "key": "_eos_library_path",
        "condition": "$ctrl.showRestricted == true"
      }
    ],
    "rightColumn": [
      {
        "key": "category",
        "placeholder": "Category",
        "title": "Category",
        "type": "strapselect",
        "htmlClass": "cds-deposit-strap-select",
        "onChange": "$ctrl.updateCategory(modelValue, form)",
        "readonly": "$ctrl.isAnyVideoAlreadyPublished()",
        "options": {
          "url": "/api/categories/",
          "asyncCallback": "$ctrl.autocompleteCategories"
        }
      },
      {
        "key": "type",
        "placeholder": "Type",
        "title": "Type",
        "type": "strapselect",
        "htmlClass": "cds-deposit-strap-select",
        "onChange": "$ctrl.updateType(modelValue, form)",
        "readonly": "$ctrl.cdsDepositCtrl.hasCategory() || $ctrl.isAnyVideoAlreadyPublished()",
        "options": {
          "filterTriggers": [
            "model.category"
          ],
          "filter": "item.category == model.category",
          "asyncCallback": "$ctrl.autocompleteType"
        }
      },
      {
        "type": "array",
        "key": "contributors",
        "title": "Contributors",
        "description": "",
        "required": true,
        "sortOptions": {
          "handle": "i.sort-handle",
          "cursor": "move",
          "axis": "y"
        },
        "add": "Add another contributor",
        "items": [
          {
            "type": "template",
            "templateUrl": "/static/templates/cds_deposit/types/common/custom_authors_dialog.html"
          },
          {
            "type": "uiselect",
            "key": "contributors[]",
            "title": "Name",
            "description": "",
            "placeholder": "Author name",
            "required": true,
            "options": {
              "refreshDelay": 500,
              "mergeObjects": true,
              "asyncCallback": "$ctrl.autocompleteAuthors",
              "url": "/api/ldap/cern-users/"
            }
          },
          {
            "type": "select",
            "key": "contributors[].role",
            "placeholder": "Role",
            "title": "Role",
            "required": true,
            "titleMap": [
              {
                "value": "Animations by",
                "name": "Animations by"
              },
              {
                "value": "Camera Operator",
                "name": "Camera Operator"
              },
              {
                "value": "Co-Producer",
                "name": "Co-Producer"
              },
              {
                "value": "Creator",
                "name": "Creator"
              },
              {
                "value": "Credits",
                "name": "Credits"
              },
              {
                "value": "Director",
                "name": "Director"
              },
              {
                "value": "Editor",
                "name": "Editor"
              },
              {
                "value": "Music by",
                "name": "Music by"
              },
              {
                "value": "Narrator",
                "name": "Narrator"
              },
              {
                "value": "Photography",
                "name": "Photography"
              },
              {
                "value": "Producer",
                "name": "Producer"
              },
              {
                "value": "Reporter",
                "name": "Reporter"
              },
              {
                "value": "Screenwriter",
                "name": "Screenwriter"
              },
              {
                "value": "Speaker",
                "name": "Speaker"
              },
              {
                "value": "Subtitles by",
                "name": "Subtitles by"
              },
              {
                "value": "Translator",
                "name": "Translator"
              }
            ]
          }
        ],
        "startEmpty": false
      }
    ]
  },
  "collapsed": {
    "leftColumn": [
      {
        "key": "category",
        "placeholder": "Category",
        "title": "Category",
        "type": "strapselect",
        "htmlClass": "cds-deposit-strap-select",
        "onChange": "$ctrl.updateCategory(modelValue, form)",
        "readonly": "$ctrl.isAnyVideoAlreadyPublished()",
        "options": {
          "url": "/api/categories/",
          "asyncCallback": "$ctrl.autocompleteCategories"
        },
        "description": ""
      }
    ],
    "rightColumn": [
      {
        "key": "type",
        "placeholder": "Type",
        "title": "Type",
        "type": "strapselect",
        "htmlClass": "cds-deposit-strap-select",
        "onChange": "$ctrl.updateType(modelValue, form)",
        "readonly": "$ctrl.cdsDepositCtrl.hasCategory() || $ctrl.isAnyVideoAlreadyPublished()",
        "options": {
          "filterTriggers": [
            "model.category"
          ],
          "filter": "item.category == model.category",
          "asyncCallback": "$ctrl.autocompleteType"
        },
        "description": ""
      }
    ]
  },
  "licenses": [
    {
      "type": "array",
      "key": "license",
      "notitle": true,
      "description": "",
      "firstItemMessage": "General license",
      "add": "Add licences",
      "inline": true,
      "items": [
        {
          "type": "uiselect",
          "key": "license[].license",
          "notitle": false,
          "title": "Licence",
          "placeholder": "License name",
          "setDefaultValue": "$ctrl.setDefaultValue",
          "minLength": 1,
          "options": {
            "refreshDelay": 100,
            "mergeObjects": true,
            "asyncCallback": "$ctrl.autocompleteLicenses",
            "url": "/api/licenses/_suggest"
          }
        },
        {
          "key": "license[].material",
          "placeholder": "Material",
          "title": "Material",
          "condition": "arrayIndex !=0"
        },
        {
          "key": "license[].credit",
          "placeholder": "Credit",
          "title": "Credit"
        }
      ]
    }
  ],
