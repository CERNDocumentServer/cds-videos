          "name":  "中文(繁)"
        }
      ]
    },
    {
      "type": "template",
      "title": "Date",
      "key": "date",
      "placeholder": "eg. 2013-05-08",
      "templateUrl": "/static/templates/cds_deposit/angular-schema-form/datepicker.html",
      "format": "yyyy-MM-dd",
      "description": "Required. Format: YYYY-MM-DD. In case your upload was already published elsewhere, please use the date of first publication.",
      "fa_cls": "fa-calendar"
    },
    {
      "type": "array",
      "key": "contributors",
      "title": "Contributors",
      "required": true,
      "description": "",
      "sortOptions": {
        "handle": "i.sort-handle",
        "cursor": "move",
        "axis": "y"
      },
      "add": "Add another contributor",
      "items": [
        {
          "type": "template",
          "templateUrl": "/static/templates/cds_deposit/types/common/custom_authors_dialog.html"
        },
        {
          "type": "uiselect",
          "key": "contributors[]",
          "placeholder": "Author name",
          "title": "Name",
          "required": true,
          "description": "",
          "options": {
            "refreshDelay": 100,
            "mergeObjects": true,
            "required": true,
            "asyncCallback": "$ctrl.autocompleteAuthors",
            "url": "//cds.cern.ch/submit/get_authors",
            "extraParams": {
              "relative_curdir": "cdslabs/videos"
            }
          }
        },
        {
          "type": "select",
          "key": "contributors[].role",
          "placeholder": "Role",
          "title": "Role",
          "required": true,
          "titleMap": [
            {
