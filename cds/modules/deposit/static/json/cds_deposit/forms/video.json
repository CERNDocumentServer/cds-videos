            },
            {
              "value":  "Speaker",
              "name":  "Speaker"
            },
            {
              "value":  "Translator",
              "name":  "Translator"
            }
          ]
        }
      ],
      "startEmpty": false
    },
    {
      "title": "Feature this video on the home page",
      "key": "featured"
    },
    {
      "title": "This video is 360",
      "key": "vr"
    }

  ],
  "licenses": [
    {
      "type": "array",
      "key": "license",
      "notitle": true,
      "description": "",
      "firstItemMessage": "General license",
      "add": "Add another licence",
      "inline": true,
      "items": [
        {
          "type": "uiselect",
          "key": "license[].license",
          "title": "Licence",
          "placeholder": "License name",
          "minLength": 1,
          "options": {
            "refreshDelay": 100,
            "mergeObjects": true,
            "asyncCallback": "$ctrl.autocompleteLicenses",
            "url": "/api/licenses/_suggest"
          }
        },
        {
          "key": "license[].material",
          "placeholder": "Material",
          "title": "Material",
          "condition": "arrayIndex !=0"
        },
        {
          "key": "license[].credit",
          "placeholder": "Credit",
          "title": "Credit"
        }
      ]
    },
    {
      "title": "Copyright",
      "key": "copyright",
      "items": [
        {
          "key": "copyright.holder",
          "title": "Holder",
          "onChange": "$ctrl.checkCopyright(modelValue,form)"
        },
        {
          "key": "copyright.year",
          "title": "Year"
        },
        {
          "key": "copyright.url",
          "title": "URL"
        }
      ]
    }
  ],
